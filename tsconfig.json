{
    "compilerOptions": {
        "outDir": "./build",
        "rootDir": "./src",
        "allowJs": false,
        "target": "esnext",
        "module": "esnext",
        "sourceMap": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "jest"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}