{
    "extends": ["tslint:recommended", "tslint-consistent-codestyle"],
    "rules": {
        "no-null-keyword": true,
        "semicolon": [true, "always"],
        "variable-name": [false, "always"],
        "naming-convention": [true,
            {"type": "member", "format": "camelCase"},
            {"type": "member", "modifiers": "protected", "prefix": "_", "format": "camelCase"},
            {"type": "member", "modifiers": "private", "prefix": "__", "format": "camelCase"}
        ],
        "only-arrow-functions": false,
        "no-console": false,
        "no-magic-numbers": true,
        "member-access": true,
        "curly": true,
        "no-arg": true,
        "no-conditional-assignment": true,
        "no-construct": true,
        "no-duplicate-imports": true,
        "no-duplicate-variable": true,
        "no-invalid-template-strings": true,
        "arrow-parens": true,
        "class-name": true,
        "typedef": [
            true,
            "call-signature",
            "property-declaration"
        ],
        "quotemark": [true, "single"]
    }
}