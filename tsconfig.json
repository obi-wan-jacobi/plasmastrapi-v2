{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./build",
        "rootDir": "./src",
        "allowJs": false,
        "target": "esnext",
        "module": "esnext",
        "sourceMap": true,
        "baseUrl": "src",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "types": [
            "jquery",
            "node",
            "uuid",
        ],
        "paths": {
            "app/*": [ "app/*" ],
            "engine/*": [ "engine/*" ],
            "foundation/*": [ "foundation/*" ],
            "framework/*": [ "framework/*" ],
            "html5-canvas": [ "html5-canvas/*" ],
        }
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
    ]
}
